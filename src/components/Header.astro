<header id="main-header" class="group sticky top-0 z-50 bg-white/10 backdrop-blur-sm transition-all duration-300">
  <div class="max-w-6xl mx-auto px-4">
    <div class="h-16 flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="inline-flex items-center gap-3" aria-label="Volver al inicio">
        <img
          src="https://res.cloudinary.com/dnf5pehhx/image/upload/v1756488216/MPF_min_Logo_y789yu.png"
          alt="MPF – Ministerio Público Fiscal de la CABA"
          class="h-9 w-auto object-contain"
          loading="lazy"
        />
      </a>

    </div>
  </div>
</header>

<!-- Botón de menú móvil y panel -->
<div class="md:hidden group-[.is-homepage]:hidden">
  <!-- Botón de hamburguesa (posición fija) -->
  <button id="menu-btn" type="button" class="fixed top-4 right-4 z-50 text-white hover:text-white/80 focus:outline-none focus:ring-2 focus:ring-white rounded-md p-2" aria-controls="mobile-menu" aria-expanded="false">
    <span class="sr-only">Abrir menú principal</span>
    <!-- Icono de hamburguesa -->
    <svg id="menu-icon-open" class="h-6 w-6 block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
    </svg>
    <!-- Icono de cierre (X) -->
    <svg id="menu-icon-close" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Panel de menú móvil (pantalla completa) -->
  <div class="fixed inset-0 z-40 bg-white h-screen hidden" id="mobile-menu" role="dialog" aria-modal="true">
    <div class="pt-20">
      <a href="/mascerca" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">Guía de Denuncias</a>
      <a href="/VG" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">Violencia de Género</a>
      <a href="/NNyA" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">NNyA</a>
      <a href="/UFEMA" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">Maltrato Animal</a>
      <a href="/drogas" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">Venta de Drogas</a>
      <a href="/Ciberfraude" class="text-gray-800 hover:bg-gray-100 block px-6 py-4 text-lg font-medium border-b border-gray-200">Ciberfraude</a>
    </div>
  </div>
</div>