            </div>

          </div>
      </div>

      <div class="pt-6 pb-10 text-center text-xl">
        <button id="toggle-button" class="inline-block bg-[#05abb7] text-white font-semibold px-6 py-3 rounded-lg hover:bg-[#005e65] transition">
          Ver listado completo
        </button>
      </div>

    </section>
  </div>
</BaseLayoutJusticia>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggle-button');
    const additionalLocations = document.getElementById('additional-locations');

    if (toggleButton && additionalLocations) {
      toggleButton.addEventListener('click', () => {
        // Comprobamos si el contenedor está colapsado (su altura es 0)
        const isCollapsed = additionalLocations.style.maxHeight === '0px';

        if (isCollapsed) {
          // Si está colapsado, lo expandimos a su altura total
          additionalLocations.style.maxHeight = additionalLocations.scrollHeight + 'px';
          toggleButton.textContent = 'Ocultar listado';
        } else {
          // Si está expandido, lo colapsamos
          additionalLocations.style.maxHeight = '0px';
          toggleButton.textContent = 'Ver listado completo';
        }
      });
    }
  });
</script>
