---
interface Props {
  title: string;
  description: string;
  bodyClass?: string;
}
import '../style.css';
import Header from '../components/Header.astro'; // Asumiendo que Header es el menú
const { title, description, bodyClass } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    html {
      scroll-behavior: smooth
    }
    body {
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji";
    }
    ::-webkit-scrollbar {
      width: 10px;
      height: 10px
    }
    ::-webkit-scrollbar-thumb {
      background: #0003;
      border-radius: 8px
    }
    ::-webkit-scrollbar-track {
      background: transparent
    }
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      opacity: 0;
      animation: fadeInUp 0.7s ease-out forwards;
    }
    
    .animation-delay-200 { animation-delay: 0.2s; }
    .animation-delay-400 { animation-delay: 0.4s; }

    .fill-on-hover {
      position: relative;
      z-index: 1;
      overflow: hidden;
    }
    .fill-on-hover::before {
      content: '';
      position: absolute;
      top: 0; left: 0; bottom: 0;
      background-color: #09788a;
      width: 0;
      transition: all 0.2s ease-out;
      z-index: -1;
    }
    @media (min-width: 640px) {
      .fill-on-hover:hover::before {
        width: 100%; /* En hover, se pinta de izquierda a derecha */
        left: 0;
      }
    }
  </style>
</head>
<body class:list={["min-h-screen text-neutral-900", bodyClass]}>
  <!-- Contenedor donde se cargará el menú, ahora dentro del body -->
  <div class="sticky top-0 z-50 group" id="menu-placeholder"></div>
  <slot />
  <footer class="bg-black/20 mt-16">
    <div class="max-w-6xl mx-auto px-4 py-10 text-center">
        
      <div class="flex items-center justify-center gap-6 mb-8">
        <a href="https://www.tiktok.com/@mpf.caba" target="_blank" class="hover:opacity-80 transition-transform duration-300 transform hover:scale-110" aria-label="Visita nuestro perfil en TikTok">
          <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/tiktok.svg" alt="Ícono de TikTok" class="w-6 h-6 invert" />
        </a>
        <a href="https://www.youtube.com/@MPFCABA" target="_blank" class="hover:opacity-80 transition-transform duration-300 transform hover:scale-110" aria-label="Visita nuestro canal de YouTube">
          <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/youtube.svg" alt="Ícono de YouTube" class="w-6 h-6 invert" />
        </a>
        <a href="https://x.com/MPFCABA" target="_blank" class="hover:opacity-80 transition-transform duration-300 transform hover:scale-110" aria-label="Visita nuestro perfil en X (antes Twitter)">
          <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/twitter.svg" alt="Ícono de X (Twitter)" class="w-6 h-6 invert" />
        </a>
        <a href="https://www.facebook.com/mpfcaba" target="_blank" class="hover:opacity-80 transition-transform duration-300 transform hover:scale-110" aria-label="Visita nuestra página de Facebook">
          <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/facebook.svg" alt="Ícono de Facebook" class="w-6 h-6 invert" />
        </a>
        <a href="https://www.instagram.com/mpfcaba/" target="_blank" class="hover:opacity-80 transition-transform duration-300 transform hover:scale-110" aria-label="Visita nuestro perfil de Instagram">
          <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/instagram.svg" alt="Ícono de Instagram" class="w-6 h-6 invert" />
        </a>
      </div>
      
      <div>
        <div class="font-semibold text-lg text-white">MPF CABA</div>
        <p class="text-sm text-neutral-200">#EstamosCerca • @mpfcaba</p>
      </div>
    </div>
  </footer>
  <script is:inline src="/script/main.js"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script type="text/javascript">
    // Inicialización de AOS
    AOS.init({
        once: true,
        duration: 800, // Duración por defecto, puede ser sobrescrita en cada página si es necesario
    });

    // Script para la animación reveal-on-scroll
    function revealOnScroll() {
      const reveals = document.querySelectorAll('.reveal-on-scroll');
      for (const el of reveals) {
        const windowHeight = window.innerHeight;
        const elementTop = el.getBoundingClientRect().top;
        const revealPoint = 80; // Punto en el que el elemento empieza a revelarse

        if (elementTop < windowHeight - revealPoint) {
          el.classList.add('visible');
        } else {
          // Opcional: Si quieres que la animación se reinicie al hacer scroll hacia arriba
          // el.classList.remove('visible');
        }
      }
    }
    // Ejecutar al cargar y al hacer scroll
    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', revealOnScroll);
    // Ejecutar una vez al inicio para elementos ya visibles
    revealOnScroll();
  </script>
</body>
</html>